<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@mipmap/login_regist_bg1"
              android:orientation="vertical">

    <com.hi.widget.Topbar
        android:id="@+id/regist_topbar"
        android:layout_width="match_parent"
        android:layout_height="42dp"

        app:left_src="@mipmap/return_white"
        app:title_text="完善资料"
        app:title_text_color="@color/white"
        app:title_text_size="16sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/login_regist_bg1"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_accid"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#353535"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_accid"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="12dp"
                android:gravity="center_vertical"
                android:hint="请输入您的账号，用于登陆"
                android:maxLines="1"
                android:paddingLeft="7dp"
                android:textColorHint="#DDDDDD"
                android:textSize="16sp" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp">

            <ImageView
                android:id="@+id/iv_select_photo"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/grid_camera" />

            <EditText
                android:id="@+id/et_usernick"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="12dp"
                android:layout_toLeftOf="@id/iv_select_photo"

                android:gravity="center_vertical"
                android:hint="如：王小二"
                android:maxLines="1"
                android:paddingLeft="7dp"
                android:textColorHint="#DDDDDD"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_usernick"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignLeft="@id/et_usernick"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#353535"
                android:textSize="16sp" />
        </RelativeLayout>


        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/btn_bg_corner_blue"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:text="完成注册"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="注册资料不可更改，请认真填写"
            android:textColor="@color/text0"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
